{
  "manifest_version": 3,
  "name": "SIP Softphone",
  "version": "1.0",
  "description": "Расширение для работы с протоколом SIP",
  "permissions": ["tabs", "storage", "activeTab"],
  "optional_permissions": ["tabs"],
  "optional_host_permissions": ["https://*/*"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["bundle.js"],
      "css": ["popup.css"]
    }
  ]
}
